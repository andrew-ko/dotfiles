{
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.formatOnSaveFiletypes": [
    "eelixir",
    "elixir",
    "javascript",
    "javascriptreact",
    "json",
    "python",
    "ruby",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "highlight.colors.enable": false,
  "signature.hideOnTextChange": true,

  "eslint.run": "onSave",
  "prettier.disableLanguages": [],

  "solargraph.diagnostics": false,
  "solargraph.formatting": true,
  "solargraph.useBundler": false,
  "solargraph.checkGemVersion": true,
  "solargraph.bundlerPath": "~/.asdf/shims/bundle",
  "solargraph.commandPath": "~/.asdf/shims/solargraph",

  "json.schemas": [
    {
      "fileMatch": ["tsconfig.json"],
      "schema": { "allowComments": true }
    }
  ]
}
