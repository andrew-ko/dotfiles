[user]
	email = andrkvlnko@gmail.com
	name = andrew-ko
[core]
	editor = "nvim"
	autocrlf = input
	excludesfile = /Users/admin/.gitignore_global
[alias]
	st = status
	last = log -1 HEAD
	co = checkout
	br = branch
	hist = log --oneline --graph
	l = log --oneline --graph --decorate --all
[push]
	default = simple
[merge]
	tool = fugitive
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
