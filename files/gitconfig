[user]
	email = andrkvlnko@gmail.com
	name = Andrew Kovalenko
[core]
	editor = "nvim"
	autocrlf = input
	excludesfile = /Users/kovalenko/.gitignore_global
[alias]
	st = status
	last = log -1 HEAD
	co = checkout
	br = branch
	hist = log --oneline --graph --decorate
	l = log --oneline --decorate
	lg = log --pretty=format:'%C(bold)%h%Creset%C(magenta)%d%Creset %s %C(yellow)<%an> %C(cyan)(%cr)%Creset' --abbrev-commit --date=relative
[push]
	default = simple
[merge]
	tool = fugitive
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[pull]
	ff = only
