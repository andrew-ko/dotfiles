# Tmux
# alias tmux="env TERM=screen-256color tmux"
# alias tmux="tmux -2"
alias t="tmux"
alias ks-tmux="tmux kill-session"

# Vim
alias v="nvim"
alias n="DARK_BG=1 nvim"
alias nvim-config="v ~/.config/nvim/init.vim"

# Git
alias gil="git log --oneline --graph --decorate --all"
alias gis="git status"
alias gia="git add -A"
alias gic="git commit"
alias gicm="git checkout master"
alias giff="git difftool"

# Npm
alias nid="npm install --save-dev"
alias nis="npm install --save"

# Yarn
alias ya="yarn add"
alias yad="yarn add --dev"
alias yarm="yarn remove"
alias yaui="yarn upgrade-interactive"

# React Native development
alias dmenu="adb shell input keyevent 82"
alias rn="react-native"

# Docker
alias dps="docker ps"
alias dpa="docker ps -a"

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ll="ls -alh"
alias la="ls -A"
alias tl="tree -L 1"
alias d="cd ~"
alias c="clear"

# Color-schemes
# alias eighties-theme="~/.config/base16-shell/scripts/base16-eighties.sh"
# alias savanna-theme="~/.config/base16-shell/scripts/base16-atelier-savanna.sh"

# Load local aliases
[[ -s "$HOME/.local_aliases" ]] && source "$HOME/.local_aliases"
